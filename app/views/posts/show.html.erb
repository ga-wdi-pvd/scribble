<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<%= button_to 'Edit', edit_post_path(@post), method: :get %>
<%= button_to 'Delete', post_path(@post), method: :delete %>
<h2>Comments</h2>
<% @post.comments.each do |comment| %>
<p><%= comment.body %></p>
<p>Posted: <%= comment.created_at %></p>
<%= button_to 'Edit', edit_post_comment_path(@post, comment), method: :get %>
<%= button_to 'Delete', post_comment_path(@post, comment), method: :delete %>
<% end %>
<%= button_to 'Add Comment', new_post_comment_path(@post), method: :get %>
